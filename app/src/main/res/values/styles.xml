<!-- values/styles.xml -->
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 기존 속성들… -->

        <!-- 모든 윈도우(=Activity) 배경색 -->
<!--        <item name="android:windowBackground">@color/assu_background</item>-->
        <!-- (Optional) View의 기본 배경색 속성 -->
        <item name="android:colorBackground">@color/assu_background</item>
    </style>

    <style name="ProvidedItemEditText">
        <!-- 배경 -->
        <item name="android:background">@drawable/bg_box_rounded</item>
        <!-- 최소 너비 -->
        <item name="android:minWidth">100dp</item>
        <!-- 글자 크기 -->
        <item name="android:textSize">17sp</item>
        <!-- 패딩 -->
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <!-- 글자 색 -->
        <item name="android:textColor">@color/assu_font_main</item>
        <!-- 폰트 패밀리 -->
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <!-- 높이는 wrap_content, 가로 여유 공간은 Margin으로 처리 -->
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearanceBottomSheet</item>
    </style>

    <style name="AppShapeAppearanceBottomSheet" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopLeft">16dp</item>
    <item name="cornerSizeTopRight">16dp</item>
    <item name="cornerSizeBottomLeft">0dp</item>
    <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="AssuDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- 캘린더 헤더 색 -->
        <item name="colorPrimary">@color/assu_main</item>
        <!-- 확인/취소 버튼 색 -->
        <item name="colorAccent">@color/assu_main</item>
        <!-- 날짜 선택 시 점/원 색 -->
        <item name="colorControlActivated">@color/assu_main</item>
        <!-- 텍스트 기본 색 -->
        <item name="android:textColorPrimary">@color/assu_font_main</item>
    </style>

</resources>