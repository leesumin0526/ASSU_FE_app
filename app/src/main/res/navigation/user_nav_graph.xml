<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.assu_fe_app.presentation.user.home.UserHomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_myPartnershipFragment"
            app:destination="@id/myPartnershipDetailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.assu_fe_app.presentation.user.location.UserLocationFragment"
        android:label="Location"/>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.assu_fe_app.presentation.user.dashboard.DashboardFragment"
        android:label="Dashboard" />

    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.example.assu_fe_app.presentation.common.mypage.MypageFragment"
        android:label="Mypage"/>

    <fragment
        android:id="@+id/myPartnershipDetailsFragment"
        android:name="com.example.assu_fe_app.presentation.user.home.MyPartnershipDetailsFragment"
        android:label="MyPartnershipDetailsFragment">

        <action
            android:id="@+id/action_myPartnershipFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>

        <action
            android:id="@+id/action_myPartnershipFragment_to_starReviewActivity"
            app:destination="@id/starReviewActivity"/>

    </fragment>


    <activity
        android:id="@+id/starReviewActivity"
        android:name="com.example.assu_fe_app.presentation.user.review.writing.UserStarReviewActivity"
        android:label="StarReviewActivity">
    </activity>

</navigation>