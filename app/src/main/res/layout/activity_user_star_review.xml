<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/assu_background"
        tools:context=".presentation.user.review.writing.UserStarReviewActivity">

        <ImageView
            android:id="@+id/iv_star_review_back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_back_arrow"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="268dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_star_review_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="역전할머니맥주 숭실대점"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/assu_font_main"/>

            <TextView
                android:id="@+id/tv_star_review_how_was_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떠셨나요?"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/assu_font_main"/>

            <View
                android:id="@+id/view_star_review_mg1"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
            <TextView
                android:id="@+id/tv_star_review_partnership"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IT대학 학생회"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/assu_font_sub"/>

            <View
                android:id="@+id/view_star_review_mg2"
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_star_review_star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_deactivated_star"/>
                <ImageView
                    android:id="@+id/iv_star_review_star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_deactivated_star"/>
                <ImageView
                    android:id="@+id/iv_star_review_star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_deactivated_star"/>
                <ImageView
                    android:id="@+id/iv_star_review_star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_deactivated_star"/>
                <ImageView
                    android:id="@+id/iv_star_review_star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_deactivated_star"/>

            </LinearLayout>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_write_review_deactivated_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_write_review_deactivated_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_basic_unselected" />

            <TextView
                android:id="@+id/tv_write_review_deactivated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="리뷰 작성하기"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/pretendard_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_write_review_activated_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_write_review_activated_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_basic_selected" />

            <TextView
                android:id="@+id/tv_write_review_activated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="리뷰 작성하기"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/pretendard_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
