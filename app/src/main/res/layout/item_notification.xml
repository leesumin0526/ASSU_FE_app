<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/assu_background"
    android:layout_height="wrap_content">
    
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintWidth_percent="0.0865"
        android:id="@+id/item_noti_mg1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ic_noti_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notification_logo"
        app:layout_constraintStart_toEndOf="@id/item_noti_mg1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="20dp"/>

    <View
        android:id="@+id/item_noti_mg2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintWidth_percent="0.0279"
        app:layout_constraintStart_toEndOf="@id/ic_noti_logo"
        app:layout_constraintTop_toTopOf="@id/ic_noti_logo"/>

    <View
        android:id="@+id/item_noti_mg3"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@id/ic_noti_logo"
        app:layout_constraintStart_toStartOf="parent"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_notification_content"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.7506"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/item_noti_mg2"
        app:layout_constraintTop_toTopOf="@id/ic_noti_logo"
        app:layout_constraintBottom_toBottomOf="@id/ic_noti_logo">
        <TextView
            android:id="@+id/tv_item_noti_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notification_type"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_item_noti_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.959"
            android:layout_height="wrap_content"
            android:text="notification content blalbla"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/assu_font_main"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintTop_toBottomOf="@id/tv_item_noti_type"
            app:layout_constraintStart_toStartOf="@id/tv_item_noti_type"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_item_noti_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/assu_font_sub"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="10분전"
        app:layout_constraintEnd_toEndOf="@id/cl_notification_content"
        app:layout_constraintTop_toTopOf="@id/cl_notification_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>