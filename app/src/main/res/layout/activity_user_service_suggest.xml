<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/assu_background"
    tools:context=".presentation.user.dashboard.UserServiceSuggestActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/suggest_mg1"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/suggest_mg2"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintWidth_percent="0.0763"
        app:layout_constraintTop_toBottomOf="@id/suggest_mg1"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/suggest_mg2_2"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintWidth_percent="0.0763"
        app:layout_constraintTop_toBottomOf="@id/suggest_mg1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btn_suggest_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toBottomOf="@id/suggest_mg1"
        app:layout_constraintStart_toEndOf="@id/suggest_mg2"/>

    <View
        android:id="@+id/suggest_mg3"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintWidth_percent="0.033"
        app:layout_constraintStart_toEndOf="@id/btn_suggest_back"
        app:layout_constraintTop_toBottomOf="@id/suggest_mg1"/>

    <TextView
        android:id="@+id/tv_suggest_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_suggest_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_suggest_back"
        app:layout_constraintStart_toEndOf="@id/suggest_mg3"
        android:text="제휴 건의함"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="20sp"/>

    <View
        android:id="@+id/suggest_mg4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0617"
        app:layout_constraintTop_toBottomOf="@id/tv_suggest_service"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_suggest"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/suggest_mg4"
        app:layout_constraintStart_toEndOf="@id/suggest_mg2"
        app:layout_constraintEnd_toStartOf="@id/suggest_mg2_2">

        <View
            android:id="@+id/spinner_target"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.0634"
            app:layout_constraintWidth_percent="0.6985" />

        <View
            android:id="@+id/suggest_mg6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.0382"
            app:layout_constraintTop_toTopOf="@id/spinner_target"
            app:layout_constraintStart_toStartOf="@id/spinner_target"
            app:layout_constraintBottom_toBottomOf="@id/spinner_target"/>

        <TextView
            android:id="@+id/tv_service_select_target"
            android:text="건의대상 선택"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/assu_font_sub"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/spinner_target"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@id/spinner_target"
            app:layout_constraintStart_toEndOf="@id/suggest_mg6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            android:text="건의대상"
            app:layout_constraintTop_toTopOf="@id/spinner_target"
            app:layout_constraintBottom_toBottomOf="@id/spinner_target"
            app:layout_constraintStart_toStartOf="@id/cl_suggest"/>

        <ImageView
            android:id="@+id/btn_service_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_suggest_drop_down"
            app:layout_constraintEnd_toStartOf="@id/suggest_mg7"
            app:layout_constraintTop_toTopOf="@id/tv_service_select_target"
            app:layout_constraintBottom_toBottomOf="@id/tv_service_select_target"
            />

        <View
            android:id="@+id/suggest_mg7"
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintWidth_percent="0.0458"
            app:layout_constraintEnd_toEndOf="@id/spinner_target"
            app:layout_constraintTop_toTopOf="@id/spinner_target"/>

        <ImageView
            android:id="@+id/service_line"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.7"
            android:layout_height="wrap_content"
            android:src="@drawable/line_suggest"
            app:layout_constraintBottom_toBottomOf="@id/spinner_target"
            app:layout_constraintStart_toStartOf="@id/spinner_target"
            app:layout_constraintEnd_toEndOf="@id/spinner_target"/>
        
        <TextView
            android:id="@+id/tv_service_want_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제휴 희망 가게"
            android:layout_marginStart="5dp"
            android:layout_marginTop="17dp"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_target"/>

        <EditText
            android:id="@+id/et_suggest_market"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:background="@drawable/bg_item_spinner"
            android:paddingStart="15dp"
            android:hint="가게 이름을 입력해주세요"
            android:textSize="17sp"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_service_want_market"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_suggest_benefit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="희망 혜택"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            app:layout_constraintTop_toBottomOf="@id/et_suggest_market"
            app:layout_constraintStart_toStartOf="@id/tv_service_want_market"/>

        <EditText
            android:id="@+id/et_suggest_want_benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="134dp"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:background="@drawable/bg_item_spinner"
            android:hint="ex) 식사 시 음료 제공을 원해요!"
            android:gravity="top"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_suggest_benefit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/et_suggest_want_benefit"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_suggest_info_circle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학부, 학번, 재학여부 등의 개인정보가 건의대상에 제공됩니다"
                android:textSize="11sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/assu_font_sub"/>

        </LinearLayout>

        <View
            android:id="@+id/suggest_mg5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0151"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/btn_suggest_complete"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/btn_basic_selected"
            android:text="입력 완료"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/white"
            app:layout_constraintDimensionRatio="345:56"
            app:layout_constraintHeight_percent="0.0706"
            app:layout_constraintBottom_toTopOf="@id/suggest_mg5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
</layout>