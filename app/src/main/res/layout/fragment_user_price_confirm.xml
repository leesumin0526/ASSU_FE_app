<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/assu_background"
    tools:context=".presentation.user.home.UserPriceConfirmFragment">

    <View
        android:id="@+id/price_h1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/price_w1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.0763"
        app:layout_constraintTop_toBottomOf="@id/price_h1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/btn_price_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toBottomOf="@id/price_h1"
        app:layout_constraintStart_toEndOf="@id/price_w1"/>

    <View
        android:id="@+id/price_h2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_price_back"/>


    <TextView
        android:id="@+id/tv_price_really"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문 금액이 정말"
        android:textSize="25sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/assu_font_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_h2"/>

    <View
        android:id="@+id/price_h5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_price_really"/>

    <LinearLayout
        android:id="@+id/ll_really"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/price_h5">
        <TextView
            android:id="@+id/tv_confirm_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/assu_main"
            android:text="15000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/assu_font_main"
            android:text="원 이상인가요?"/>

    </LinearLayout>

    <View
        android:id="@+id/price_h3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0329"
        app:layout_constraintTop_toBottomOf="@id/ll_really"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_check_please"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/assu_font_sub"
        android:textSize="17sp"
        android:text="주문금액을 반드시 확인해주세요"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/price_h3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/btn_price_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_basic_selected"
        android:text="네, 맞아요"
        android:textColor="@color/assu_font_white"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.879"
        app:layout_constraintHeight_percent="0.0657"
        app:layout_constraintBottom_toTopOf="@id/price_h6"/>

    <View
        android:id="@+id/price_h6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0606"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>








</androidx.constraintlayout.widget.ConstraintLayout>
</layout>