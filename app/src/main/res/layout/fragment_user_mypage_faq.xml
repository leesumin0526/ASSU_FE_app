<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/assu_background"
    tools:context=".presentation.user.mypage.UserMypageFAQFragment">

    <View
        android:id="@+id/faq_mg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/faq_mg2"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintWidth_percent="0.0763"
        app:layout_constraintTop_toBottomOf="@id/faq_mg1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/btn_faq_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toBottomOf="@id/faq_mg1"
        app:layout_constraintStart_toEndOf="@id/faq_mg2"/>

    <View
        android:id="@+id/faq_mg3"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintWidth_percent="0.033"
        app:layout_constraintStart_toEndOf="@id/btn_faq_back"
        app:layout_constraintTop_toBottomOf="@id/faq_mg1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_faq_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_faq_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="자주 묻는 질문"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/assu_font_main"
        android:textSize="20sp"/>

    <View
        android:id="@+id/faq_mg4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0523"
        app:layout_constraintTop_toBottomOf="@id/btn_faq_back"
        app:layout_constraintStart_toStartOf="@id/btn_faq_back"/>

    <!-- FAQ 리스트 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/faq_mg4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="12dp">

                         <!-- FAQ 1 -->
             <androidx.cardview.widget.CardView
                 android:id="@+id/card_faq_1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="12dp"
                 app:cardCornerRadius="8dp"
                 app:cardElevation="0dp"
                 app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 질문 헤더 -->
                    <LinearLayout
                        android:id="@+id/header_faq_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q"
                            android:textSize="17sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_semibold"
                            android:layout_marginEnd="7dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="제휴를 연장할 수 있나요?"
                            android:textSize="17sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_medium"/>

                        <ImageView
                            android:id="@+id/arrow_faq_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            android:rotation="0"/>

                    </LinearLayout>

                    <!-- 하단 stroke -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DBDDE1"/>

                                         <!-- 답변 내용 -->
                     <LinearLayout
                         android:id="@+id/content_faq_1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:padding="20dp"
                         android:background="@color/assu_background"
                         android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="네, 제휴 연장이 가능합니다. 제휴 만료일 30일 전부터 연장 신청을 받고 있으며, 앱 내에서 간편하게 연장 신청을 할 수 있습니다."
                            android:textSize="15sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_regular"
                            android:lineSpacingExtra="4dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

                         <!-- FAQ 2 -->
             <androidx.cardview.widget.CardView
                 android:id="@+id/card_faq_2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="12dp"
                 app:cardCornerRadius="8dp"
                 app:cardElevation="0dp"
                 app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 질문 헤더 -->
                    <LinearLayout
                        android:id="@+id/header_faq_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q"
                            android:textSize="17sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_semibold"
                            android:layout_marginEnd="7dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="제휴 계약서가 승인되는데 얼마나 걸리나요?"
                            android:textSize="17sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_medium"/>

                        <ImageView
                            android:id="@+id/arrow_faq_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            android:rotation="0"/>

                    </LinearLayout>

                    <!-- 하단 stroke -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DBDDE1"/>

                                         <!-- 답변 내용 -->
                     <LinearLayout
                         android:id="@+id/content_faq_2"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:padding="20dp"
                         android:background="@color/assu_background"
                         android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="제휴 계약서 승인은 일반적으로 3-5일 정도 소요됩니다. 서류 검토 후 승인 여부를 알려드리며, 승인 완료 시 푸시 알림으로 안내해드립니다."
                            android:textSize="15sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_regular"
                            android:lineSpacingExtra="4dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

                         <!-- FAQ 3 -->
             <androidx.cardview.widget.CardView
                 android:id="@+id/card_faq_3"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="12dp"
                 app:cardCornerRadius="8dp"
                 app:cardElevation="0dp"
                 app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 질문 헤더 -->
                    <LinearLayout
                        android:id="@+id/header_faq_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q"
                            android:textSize="17sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_semibold"
                            android:layout_marginEnd="7dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="제휴 혜택이 무엇인가요?"
                            android:textSize="17sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_medium"/>

                        <ImageView
                            android:id="@+id/arrow_faq_3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            android:rotation="0"/>

                    </LinearLayout>

                    <!-- 하단 stroke -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DBDDE1"/>

                                         <!-- 답변 내용 -->
                     <LinearLayout
                         android:id="@+id/content_faq_3"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:padding="20dp"
                         android:background="@color/assu_background"
                         android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="제휴 혜택으로는 할인 쿠폰, 포인트 적립, 특별 이벤트 참여 등이 있습니다. 제휴 업체마다 제공하는 혜택이 다르므로 각 업체의 상세 페이지에서 확인하실 수 있습니다."
                            android:textSize="15sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_regular"
                            android:lineSpacingExtra="4dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

                         <!-- FAQ 4 -->
             <androidx.cardview.widget.CardView
                 android:id="@+id/card_faq_4"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="12dp"
                 app:cardCornerRadius="8dp"
                 app:cardElevation="0dp"
                 app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 질문 헤더 -->
                    <LinearLayout
                        android:id="@+id/header_faq_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q"
                            android:textSize="17sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_semibold"
                            android:layout_marginEnd="7dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="스탬프 내역 지울 수 있나요?"
                            android:textSize="17sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_medium"/>

                        <ImageView
                            android:id="@+id/arrow_faq_4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            android:rotation="0"/>

                    </LinearLayout>

                    <!-- 하단 stroke -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DBDDE1"/>

                                         <!-- 답변 내용 -->
                     <LinearLayout
                         android:id="@+id/content_faq_4"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:padding="20dp"
                         android:background="@color/assu_background"
                         android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="스탬프 내역은 개인정보 보호를 위해 자동으로 삭제되지 않습니다. 단, 고객센터를 통해 특별한 사유가 있는 경우에만 개별적으로 삭제 요청을 받고 있습니다."
                            android:textSize="15sp"
                            android:textColor="@color/assu_font_main"
                            android:fontFamily="@font/pretendard_regular"
                            android:lineSpacingExtra="4dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
