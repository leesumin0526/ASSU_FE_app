<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/assu_background"
        tools:context=".presentation.user.review.writing.UserPhotoReviewActivity">

        <FrameLayout
            android:id="@+id/photo_review_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/layout_my_photo_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_my_photo_review_back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"/>

            <TextView
                android:id="@+id/tv_my_photo_review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 리뷰 작성"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="20sp"
                android:textColor="@color/assu_font_main"
                android:layout_marginStart="3dp"/>
        </LinearLayout>

        <View
            android:id="@+id/view_photo_review_mg1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_my_photo_review_title"/>

        <LinearLayout
            android:id="@+id/layout_partnership_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_photo_review_mg1"
            android:layout_marginStart="24dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_app_member"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인쌩맥주 숭실대점"
                    android:textSize="17sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/assu_font_main"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제휴내용 : "
                        android:textSize="13sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/assu_font_sub"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4인 이상 식사 시 음료 제공"
                        android:textSize="13sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/assu_font_sub"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_photo_review_mg2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_partnership_info"/>

        <ImageView
            android:id="@+id/iv_my_photo_review_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:src="@drawable/ic_home_basic_box"
            app:layout_constraintTop_toBottomOf="@id/view_photo_review_mg2"/>


        <View
            android:id="@+id/view_photo_review_mg3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/iv_my_photo_review_line"/>

        <TextView
            android:id="@+id/tv_please_write_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰를 작성해 주세요"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:textColor="@color/assu_font_main"
            app:layout_constraintTop_toBottomOf="@id/view_photo_review_mg3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>

        <View
            android:id="@+id/view_photo_review_mg4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_please_write_review"/>

        <EditText
            android:id="@+id/et_write_photo_review"
            android:layout_width="0dp"
            android:layout_height="188dp"
            app:layout_constraintWidth_percent="0.8778625954"
            android:background="@drawable/bg_empty_line_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_photo_review_mg4"
            android:hint="리뷰를 작성해 주세요"
            android:textSize="13sp"
            android:gravity="top|start"
            android:padding="14dp"/>


        <View
            android:id="@+id/view_photo_review_mg5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/et_write_photo_review"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_warning_box"
            android:layout_width="0dp"
            android:layout_height="27dp"
            app:layout_constraintWidth_percent="0.8778625954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_photo_review_mg5"
            android:background="@drawable/ic_home_basic_box">

            <LinearLayout
                android:id="@+id/layout_my_photo_review_warning_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="7dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_my_photo_review_warning_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_circle_empty"/>

                <TextView
                    android:id="@+id/tv_my_photo_review_warning_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="부적절한 언어 및 비속어 사용 시 사전 통보없이 삭제될 수 있습니다."
                    android:textColor="@color/assu_font_sub"
                    android:textSize="10sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_photo_review_mg6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_warning_box"/>

        <TextView
            android:id="@+id/tv_my_photo_review_select_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진을 올려 주세요"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:textColor="@color/assu_font_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_photo_review_mg6"
            android:layout_marginStart="24dp"/>

        <View
            android:id="@+id/view_photo_review_mg7"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_my_photo_review_select_photo"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_select_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_photo_review_mg7"
            android:layout_marginStart="24dp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_finish_review_deactivated_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_finish_review_deactivated_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_basic_unselected" />

            <TextView
                android:id="@+id/tv_finish_review_deactivated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="작성완료"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/pretendard_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_finish_review_activated_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_finish_review_activated_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_basic_selected" />

            <TextView
                android:id="@+id/tv_finish_review_activated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="작성완료"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/pretendard_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
