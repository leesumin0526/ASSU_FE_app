<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.user.signup.UserSignUpStudentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/assu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 프로그레스바 영역 -->
        <FrameLayout
            android:id="@+id/fl_signup_progress_container"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_signup_progress_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_signup_progress_bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_signup_progress_bar" />
        </FrameLayout>

        <!-- 컨텐츠 영역 FrameLayout -->
        <FrameLayout
            android:id="@+id/fl_content_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="46dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/fl_signup_progress_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 기본 컨텐츠 (처음에 표시) -->
            <LinearLayout
                android:id="@+id/ll_default_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 가이드 텍스트 -->
                <TextView
                    android:id="@+id/tv_school_account_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="숭실대학교 학생이시군요!\n재학중이신 학교를\n인증해주세요!"
                    android:textColor="@color/assu_font_main"
                    android:textSize="25sp" />

                <!-- LMS 인증하기 버튼 -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center">

                    <ImageButton
                        android:id="@+id/btn_lms_auth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_lms_auth" />

                    <TextView
                        android:id="@+id/tv_lms_auth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="LMS 인증하기"
                        android:textSize="20sp"
                        android:textColor="@color/assu_main"
                        android:fontFamily="@font/pretendard_medium" />

                </FrameLayout>

            </LinearLayout>

            <!-- LMS 인증 WebView (처음에는 숨김) -->
            <WebView
                android:id="@+id/webview_lms_auth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
