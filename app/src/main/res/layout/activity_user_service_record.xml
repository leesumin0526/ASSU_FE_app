<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.user.dashboard.UserServiceRecordActivity">

    <View
        android:id="@+id/serviceRecord_mg1"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/serviceRecord_mg2"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintWidth_percent="0.0763"
        app:layout_constraintTop_toBottomOf="@id/serviceRecord_mg1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/btn_serviceRecord_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toBottomOf="@id/serviceRecord_mg1"
        app:layout_constraintStart_toEndOf="@id/serviceRecord_mg2"/>

    <View
        android:id="@+id/serviceRecord_mg3"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintWidth_percent="0.033"
        app:layout_constraintStart_toEndOf="@id/btn_serviceRecord_back"
        app:layout_constraintTop_toBottomOf="@id/serviceRecord_mg1"/>

    <TextView
        android:id="@+id/tv_service_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_serviceRecord_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_serviceRecord_back"
        app:layout_constraintStart_toEndOf="@id/serviceRecord_mg3"
        android:text="제휴 내역"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="20sp"/>

    <View
        android:id="@+id/serviceRecord_mg4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_service_record_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_service_record_top_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serviceRecord_mg4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/serviceRecord_mg5"
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintWidth_percent="0.0763"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_serviceRecord_month_convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36.5dp"
            app:layout_constraintStart_toEndOf="@id/serviceRecord_mg5"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_serviceRecord_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dash_small_before"
                android:layout_marginStart="9dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_serviceRecord_month"
                app:layout_constraintTop_toTopOf="@id/tv_serviceRecord_month"/>
            <TextView
                android:id="@+id/tv_serviceRecord_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="17sp"
                android:layout_marginStart="13dp"
                android:text="3월"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_serviceRecord_back_arrow"/>

            <ImageView
                android:id="@+id/iv_serviceRecord_next_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dash_small_next_disable"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@id/tv_serviceRecord_month"
                app:layout_constraintTop_toTopOf="@id/iv_serviceRecord_back_arrow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/serviceRecord_mg6"
            android:layout_width="10dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0277"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_serviceRecord_month_convert"/>

        <LinearLayout
            android:id="@+id/ll_service_discount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/cl_serviceRecord_month_convert"
            app:layout_constraintTop_toBottomOf="@id/serviceRecord_mg6">

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="25sp"
                android:includeFontPadding="false"
                android:layout_marginEnd="4dp"
                android:text="20,000"
                android:textColor="@color/assu_main"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="원 할인!"
                android:textColor="@color/assu_main"
                android:textSize="25sp"
                android:fontFamily="@font/pretendard_semibold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_service_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            app:layout_constraintStart_toStartOf="@id/ll_service_discount_text"
            app:layout_constraintTop_toBottomOf="@id/ll_service_discount_text">
            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="25sp"
                android:layout_marginEnd="4dp"
                android:text="서비스"
                android:textColor="@color/assu_font_main"/>

            <TextView
                android:id="@+id/tv_service_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="25sp"
                android:layout_marginEnd="4dp"
                android:text="10"
                android:textColor="@color/assu_main"/>

            <TextView
                android:id="@+id/tv_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="25sp"
                android:layout_marginEnd="4dp"
                android:text="건을 받았어요!"
                android:textColor="@color/assu_font_main"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="25dp"
            android:id="@+id/rv_serviceRecord"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_service_received"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
</layout>