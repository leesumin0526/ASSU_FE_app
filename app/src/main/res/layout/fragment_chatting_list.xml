<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.common.chatting.ChattingListFragment"
        android:background="@color/assu_background">

        <TextView
            android:id="@+id/tv_admin_chatting_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅 내역"
            android:fontFamily="@font/pretendard_semibold"
            android:textSize="20sp"
            android:textColor="@color/assu_font_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:id="@+id/layout_admin_chatting_no_history_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_admin_chatting_no_chat_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아직 채팅 내역이 없어요"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="16sp"
                android:textColor="@color/assu_font_main"/>
            <View
                android:id="@+id/view_admin_chatting_mg1"
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제휴 협력을 원하는 매장에 채팅을"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="14sp"
                android:textColor="@color/assu_font_sub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시도 할 수 있어요!"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="14sp"
                android:textColor="@color/assu_font_sub"/>

        </LinearLayout>

        <View
            android:id="@+id/view_admin_chatting_mg2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_admin_chatting_history"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chatting_chat_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_admin_chatting_mg2"
            tools:listitem="@layout/item_chatting_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        </androidx.recyclerview.widget.RecyclerView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>