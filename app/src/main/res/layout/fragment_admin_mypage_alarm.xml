<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/assu_background"
    tools:context=".presentation.admin.mypage.AdminMypageAlarmFragment">

    <View
        android:id="@+id/admin_alarm_mg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/admin_alarm_mg2"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintWidth_percent="0.0763"
        app:layout_constraintTop_toBottomOf="@id/admin_alarm_mg1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/btn_admin_alarm_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toBottomOf="@id/admin_alarm_mg1"
        app:layout_constraintStart_toEndOf="@id/admin_alarm_mg2"/>

    <View
        android:id="@+id/admin_alarm_mg3"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintWidth_percent="0.033"
        app:layout_constraintStart_toEndOf="@id/btn_admin_alarm_back"
        app:layout_constraintTop_toBottomOf="@id/admin_alarm_mg1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_admin_alarm_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_admin_alarm_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="알림설정"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/assu_font_main"
        android:textSize="20sp"/>

    <View
        android:id="@+id/admin_alarm_mg4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0523"
        app:layout_constraintTop_toBottomOf="@id/btn_admin_alarm_back"
        app:layout_constraintStart_toStartOf="@id/btn_admin_alarm_back"/>

    <!-- PUSH 알림 설정 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_admin_alarm_push"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="9dp"
        app:layout_constraintTop_toBottomOf="@id/admin_alarm_mg4"
        app:layout_constraintStart_toStartOf="@id/admin_alarm_mg4">

        <!-- 텍스트 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_admin_alarm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_admin_alarm_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUSH 알림"
                android:textSize="15sp"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 토글 스위치 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_admin_alarm_toggle"
            android:layout_width="68dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Switch
                android:id="@+id/switch_admin_alarm_push"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:checked="true"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- PUSH 알림과 제휴건의 알림 사이 간격 -->
    <View
        android:id="@+id/admin_alarm_mg5"
        android:layout_width="0dp"
        android:layout_height="13dp"
        app:layout_constraintTop_toBottomOf="@id/cl_admin_alarm_push"
        app:layout_constraintStart_toStartOf="@id/cl_admin_alarm_push"/>

    <!-- 제휴건의 알림 설정 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_admin_alarm_partnership_request"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="9dp"
        app:layout_constraintTop_toBottomOf="@id/admin_alarm_mg5"
        app:layout_constraintStart_toStartOf="@id/cl_admin_alarm_push">

        <!-- 텍스트 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_admin_alarm_text_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_admin_alarm_partnership_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제휴건의 알림"
                android:textSize="15sp"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 토글 스위치 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_admin_alarm_toggle_request"
            android:layout_width="68dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Switch
                android:id="@+id/switch_admin_alarm_partnership_request"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:checked="true"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 제휴제안 알림 설정 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_admin_alarm_partnership_proposal"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="9dp"
        app:layout_constraintTop_toBottomOf="@id/cl_admin_alarm_partnership_request"
        app:layout_constraintStart_toStartOf="@id/cl_admin_alarm_partnership_request">

        <!-- 텍스트 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_admin_alarm_text_proposal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_admin_alarm_partnership_proposal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제휴제안 알림"
                android:textSize="15sp"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 토글 스위치 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_admin_alarm_toggle_proposal"
            android:layout_width="68dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Switch
                android:id="@+id/switch_admin_alarm_partnership_proposal"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:checked="true"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
