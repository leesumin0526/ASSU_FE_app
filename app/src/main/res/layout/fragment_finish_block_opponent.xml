<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="174dp"
    tools:context=".FinishBlockOpponentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_assubackground_box_radius_8">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="7dp">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차단이 완료되었습니다!"
                android:textSize="20sp"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_semibold" />

            <ImageView
                android:id="@+id/ivCross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross_gray"
                android:layout_gravity="end"
                android:layout_marginStart="50dp"/>


        </LinearLayout>



        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="숭실대학교 총학생회 (이)가 차단되었습니다.\n차단해제는 계정관리 탭을 확인해 주세요."
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            android:paddingBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnLeave"
                android:layout_width="257dp"
                android:layout_height="41dp"
                android:layout_gravity="end"
                android:background="@drawable/bg_assu_main_color_box_radius_8"
                android:gravity="center"
                android:text="차단하기"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>