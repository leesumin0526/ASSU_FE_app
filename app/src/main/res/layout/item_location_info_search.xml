<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/bg_location_info_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="345:74"/>
    <View
        android:id="@+id/location_info_search_mg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.0289"
        app:layout_constraintStart_toStartOf="@id/bg_location_info_search"
        app:layout_constraintTop_toTopOf="@id/bg_location_info_search"
        app:layout_constraintBottom_toBottomOf="@id/bg_location_info_search"/>

    <View
        android:id="@+id/location_info_search_mg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.0329"
        app:layout_constraintEnd_toEndOf="@id/bg_location_info_search"
        app:layout_constraintTop_toTopOf="@id/bg_location_info_search"
        app:layout_constraintBottom_toBottomOf="@id/bg_location_info_search"/>

    <LinearLayout
        android:id="@+id/ll_location_info_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/location_info_search_mg1"
        app:layout_constraintEnd_toStartOf="@id/iv_location_info_check"
        app:layout_constraintTop_toTopOf="@id/bg_location_info_search"
        app:layout_constraintBottom_toBottomOf="@id/bg_location_info_search">
        <TextView
            android:id="@+id/tv_location_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/assu_font_main"
            android:fontFamily="@font/pretendard_medium"
            android:text="숭실대학교 중문 약국"/>

        <TextView
            android:id="@+id/tv_location_info_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/assu_font_sub"
            android:text="서울시 동작구 상도로 360"
            android:fontFamily="@font/pretendard_regular"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_location_info_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/ll_location_info_content"
        app:layout_constraintBottom_toBottomOf="@id/ll_location_info_content"
        android:src="@drawable/ic_location_info_check"
        app:layout_constraintEnd_toStartOf="@id/location_info_search_mg2"/>

    <View
        android:id="@+id/view_location_info_search_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DCDFDF"
        app:layout_constraintStart_toStartOf="@id/ll_location_info_content"
        app:layout_constraintEnd_toStartOf="@id/location_info_search_mg2"
        app:layout_constraintBottom_toBottomOf="@id/bg_location_info_search"
        android:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>