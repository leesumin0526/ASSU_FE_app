<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/assu_background"
    android:layout_marginBottom="10dp">

    <!-- 계약서 정보 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contract_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        android:layout_marginEnd="24dp">

        <!-- 매장명 -->
        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="역전할머니맥주 숭실대점"
            android:textSize="15sp"
            android:textColor="@color/assu_font_main"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 제안일 정보 -->
        <LinearLayout
            android:id="@+id/date_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_store_name"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제안일 | "
                android:textSize="13sp"
                android:textColor="#8E9398"
                android:fontFamily="@font/pretendard_regular"/>

            <TextView
                android:id="@+id/tv_proposal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-03-25"
                android:textSize="13sp"
                android:textColor="#8E9398"
                android:fontFamily="@font/pretendard_regular"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 삭제 버튼 -->
    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제하기"
        android:textSize="13sp"
        android:textColor="@color/assu_main"
        android:fontFamily="@font/pretendard_regular"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>

