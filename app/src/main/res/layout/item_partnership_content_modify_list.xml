<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_suggestion_list_item"
            android:layout_weight="316">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="21">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"/>


                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="서비스 제공"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/assu_font_sub"
                    android:layout_weight="270"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="31">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>


                <TextView
                    android:id="@+id/tv_partnership_condition_people"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/assu_font_main"
                    android:layout_weight="64"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_partnership_condition_details1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="인 이상일 경우"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/assu_font_main"
                    android:layout_weight="86"/>

                <TextView
                    android:id="@+id/tv_partnership_condition_goods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="캔음료"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/assu_font_main"
                    android:layout_weight="72"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_partnership_condition_details2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="제공"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/assu_font_main"
                    android:layout_weight="43"
                    android:gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24"/>
    </LinearLayout>
</layout>