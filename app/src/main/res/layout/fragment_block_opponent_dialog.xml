<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="174dp"
    tools:context=".BlockOpponentDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_assubackground_box_radius_8">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="7dp">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정말로 차단하시겠습니까?"
                android:textSize="20sp"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_semibold" />

            <ImageView
                android:id="@+id/ivCross"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ic_cross_gray"
                android:layout_gravity="end"
                android:layout_marginStart="50dp"/>


        </LinearLayout>



        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차단하실 경우, 채팅을 할 수 없습니다.\n마이페이지에서 차단 관리를 해주세요."
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            android:paddingBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="109dp"
                android:layout_height="41dp"
                android:layout_gravity="start"
                android:background="@drawable/bg_box_sub3_rounded"
                android:gravity="center"
                android:text="취소"
                android:textColor="@color/assu_main" />

            <TextView
                android:id="@+id/btnBlock"
                android:layout_width="148dp"
                android:layout_height="41dp"
                android:layout_gravity="end"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_assu_main_color_box_radius_8"
                android:gravity="center"
                android:text="차단하기"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>



</FrameLayout>