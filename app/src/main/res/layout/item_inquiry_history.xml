<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_inquiry_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="상호명 변경 문의드립니다."
        android:textSize="17sp"
        android:textColor="@color/assu_font_main"
        android:fontFamily="@font/pretendard_medium"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right_container"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 오른쪽 컨테이너 (날짜/시간 + 상태) -->
    <LinearLayout
        android:id="@+id/right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 날짜/시간 컨테이너 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">

            <!-- 날짜 -->
            <TextView
                android:id="@+id/tv_inquiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-03-15"
                android:textSize="13sp"
                android:textColor="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginEnd="4dp"/>

            <!-- 시간 -->
            <TextView
                android:id="@+id/tv_inquiry_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:36"
                android:textSize="13sp"
                android:textColor="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_regular"/>

        </LinearLayout>

        <!-- 상태 배지 -->
        <TextView
            android:id="@+id/tv_inquiry_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답변 대기중"
            android:textSize="13sp"
            android:textColor="@color/assu_font_sub"
            android:fontFamily="@font/pretendard_regular"
            android:background="@drawable/bg_status_pending"
            android:gravity="center"
            tools:text="답변 완료"
            tools:background="@drawable/bg_status_completed"
            tools:textColor="@color/assu_main"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
