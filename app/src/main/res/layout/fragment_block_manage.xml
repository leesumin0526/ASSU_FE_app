<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/assu_background"
        tools:context=".presentation.common.mypage.BlockManageFragment">


        <!-- 상단 여백 -->
        <View
            android:id="@+id/pending_mg1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.039"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 헤더 영역 -->
        <View
            android:id="@+id/pending_mg2"
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintWidth_percent="0.0763"
            app:layout_constraintTop_toBottomOf="@id/pending_mg1"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/btn_pending_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toBottomOf="@id/pending_mg1"
            app:layout_constraintStart_toEndOf="@id/pending_mg2"/>

        <View
            android:id="@+id/pending_mg3"
            android:layout_width="0dp"
            android:layout_height="5dp"
            app:layout_constraintWidth_percent="0.033"
            app:layout_constraintStart_toEndOf="@id/btn_pending_back"
            app:layout_constraintTop_toBottomOf="@id/pending_mg1"/>

        <TextView
            android:id="@+id/tv_block_manage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/btn_pending_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_pending_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="차단 관리"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/assu_font_main"
            android:textSize="20sp"/>

        <View
            android:id="@+id/pending_mg4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0213"
            app:layout_constraintTop_toBottomOf="@id/btn_pending_back"
            app:layout_constraintStart_toStartOf="@id/btn_pending_back"/>

        <!-- 메인 컨텐츠 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/pending_mg4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 정보 알림 박스 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_container"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:background="#F4F4F5"
                android:padding="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ic_info"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_info_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="내가 차단한 상대 목록이에요"
                    android:textSize="11sp"
                    android:textColor="#8E9398"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@id/ic_info"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 개수 표시 -->
            <LinearLayout
                android:id="@+id/count_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/info_container"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="차단된 상대가 "
                    android:textSize="13sp"
                    android:textColor="@color/assu_font_main"
                    android:fontFamily="@font/pretendard_medium"/>

                <TextView
                    android:id="@+id/tv_block_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="13sp"
                    android:textColor="@color/assu_main"
                    android:fontFamily="@font/pretendard_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 곳 있어요"
                    android:textSize="13sp"
                    android:textColor="@color/assu_font_main"
                    android:fontFamily="@font/pretendard_medium"/>

            </LinearLayout>

            <!-- 계약서 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_block_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/count_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_blcok_list"
                android:visibility="visible"/>

            <!-- 빈 상태 UI -->
            <LinearLayout
                android:id="@+id/ll_empty_block_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아직 차단된 상대가 없어요!"
                    android:textSize="16sp"
                    android:textColor="@color/assu_font_main"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="채팅탭에서 상대방을 차단할 수 있어요"
                    android:textSize="14sp"
                    android:textColor="@color/assu_font_sub"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:layout_marginTop="6dp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>