<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/iv_location_search_result_item_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="365:122" />

    <View
        android:id="@+id/view_location_search_result_item_mg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="11:122"
        app:layout_constraintStart_toStartOf="@id/iv_location_search_result_item_bg"
        app:layout_constraintTop_toTopOf="@id/iv_location_search_result_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_location_search_result_item_bg"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_location_search_result_item_"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.1917"
        app:cardCornerRadius="7dp"
        app:layout_constraintTop_toTopOf="@id/iv_location_search_result_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_location_search_result_item_bg"
        app:layout_constraintStart_toEndOf="@id/view_location_search_result_item_mg1">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_location_search_result_item_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_location_beer"/>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view_location_search_result_item_mg3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_location_search_result_item_bg"
        app:layout_constraintDimensionRatio="13:122"
        app:layout_constraintStart_toEndOf="@id/cv_location_search_result_item_"
        app:layout_constraintTop_toTopOf="@id/iv_location_search_result_item_bg" />

    <LinearLayout
        android:id="@+id/ll_location_search_result_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/iv_location_search_result_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_location_search_result_item_bg"
        app:layout_constraintStart_toEndOf="@id/view_location_search_result_item_mg3">

        <TextView
            android:id="@+id/tv_location_search_result_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="역전할머니 숭실대점"
            android:textSize="17sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/assu_font_main"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/ll_location_search_result_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_location_search_result_item_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT대 학생회"
            android:textSize="11sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:background="@drawable/bg_location_search_result_item_round"/>

        <TextView
            android:id="@+id/tv_location_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4인 이상 식사시, 음료 제공"
            android:textSize="13sp"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_location_search_result_item_line"
        android:layout_width="353dp"
        android:layout_height="1dp"
        android:background="#DCDFDF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_location_search_result_item_bg"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>