<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/assu_background">

        <!-- 로고 -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="89dp"
            android:layout_height="24dp"
            android:layout_marginTop="94dp"
            android:src="@drawable/ic_assu_main_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Email 입력 -->

        <TextView
            android:id="@+id/tv_login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="73dp"
            android:text="Email"
            android:textColor="#999999"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo" />

        <EditText
            android:id="@+id/et_login_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="email@example.com"
            android:inputType="textEmailAddress"
            android:backgroundTint="#CCCCCC"
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_login_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/tv_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="35dp"
            android:text="Password"
            android:textColor="#999999"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_login_id" />

        <!-- Password 입력 -->
        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="your password"
            android:inputType="textPassword"
            android:backgroundTint="#CCCCCC"
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_login_password"
            app:layout_constraintStart_toStartOf="@id/et_login_id"
            app:layout_constraintEnd_toEndOf="@id/et_login_id" />

        <!-- Login 버튼 -->
        <ImageButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_basic_unselected"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintTop_toBottomOf="@id/et_login_password"
            app:layout_constraintStart_toStartOf="@id/et_login_password"
            app:layout_constraintEnd_toEndOf="@id/et_login_password"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="Login"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintTop_toBottomOf="@id/et_login_password"
            app:layout_constraintStart_toStartOf="@id/et_login_password"
            app:layout_constraintEnd_toEndOf="@id/et_login_password"/>

        <!-- 구분선 -->
        <View
            android:id="@+id/view_line"
            android:layout_width="315dp"
            android:layout_height="1dp"
            android:layout_marginTop="35dp"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintStart_toStartOf="@id/btn_login"
            app:layout_constraintEnd_toEndOf="@id/btn_login" />

        <!-- Login 버튼 -->
        <ImageButton
        android:id="@+id/btn_lms_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/assu_main"
        android:background="@drawable/btn_sub"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        app:layout_constraintStart_toStartOf="@id/view_line"
        app:layout_constraintEnd_toEndOf="@id/view_line"/>

    <TextView
        android:id="@+id/tv_lms_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="LMS 학생 로그인"
        android:textSize="13sp"
        android:textColor="@color/assu_main"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        app:layout_constraintStart_toStartOf="@id/view_line"
        app:layout_constraintEnd_toEndOf="@id/view_line"/>

        <!-- 회원가입 안내 텍스트 -->
        <TextView
            android:id="@+id/tv_signup_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="아직 계정이 없으신가요?"
            android:textColor="@color/assu_font_sub"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/btn_lms_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 회원가입하기 텍스트 -->
         <TextView
             android:id="@+id/btn_signup"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
             android:text="회원가입하기"
             android:textColor="@color/assu_main"
             android:textSize="14sp"
             android:clickable="true"
             android:focusable="true"
             android:fontFamily="@font/pretendard_semibold"
             app:layout_constraintTop_toBottomOf="@id/tv_signup_guide"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
