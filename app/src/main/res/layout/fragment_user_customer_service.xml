<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/assu_background">

    <!-- 상단 여백 -->
    <View
        android:id="@+id/cs_mg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/cs_mg2"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintWidth_percent="0.0763"
        app:layout_constraintTop_toBottomOf="@id/cs_mg1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/btn_cs_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toBottomOf="@id/cs_mg1"
        app:layout_constraintStart_toEndOf="@id/cs_mg2"/>

    <View
        android:id="@+id/cs_mg3"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintWidth_percent="0.033"
        app:layout_constraintStart_toEndOf="@id/btn_cs_back"
        app:layout_constraintTop_toBottomOf="@id/cs_mg1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:text="고객센터"
        android:textColor="@color/assu_font_main"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_cs_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_cs_back"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/cs_mg4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintTop_toBottomOf="@id/btn_cs_back"
        app:layout_constraintStart_toStartOf="@id/btn_cs_back"/>

    <!-- 탭 영역 -->
    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cs_mg4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 문의하기 탭 -->
        <LinearLayout
            android:id="@+id/tab_inquiry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tv_tab_inquiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문의하기"
                android:textSize="15sp"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_medium"/>

            <View
                android:id="@+id/tab_inquiry_bottom_line"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="2dp"
                android:background="@color/assu_font_main"
                android:visibility="visible"/>
        </LinearLayout>

        <!-- 문의내역확인 탭 -->
        <LinearLayout
            android:id="@+id/tab_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tv_tab_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문의내역확인"
                android:textSize="15sp"
                android:textColor="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_medium"/>

            <View
                android:id="@+id/tab_history_bottom_line"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="2dp"
                android:background="@color/assu_font_main"
                android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>

    <!-- 컨텐츠 영역 -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 문의하기 화면 -->
        <include
            android:id="@+id/inquiry_layout"
            layout="@layout/fragment_user_customer_service_inquiry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <!-- 문의내역확인 화면 -->
        <include
            android:id="@+id/history_layout"
            layout="@layout/fragment_user_customer_service_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
