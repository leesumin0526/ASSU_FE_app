<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/review_store_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_review_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/assu_background">

        <View
            android:id="@+id/view_partner_list_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/assu_background"
            app:layout_constraintHeight_percent="0.0914"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_review_store_mg1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.0157"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_review_store_mg2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_partner_list_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.01816" />

        <ImageView
            android:id="@+id/iv_review_store_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_location_search_left_arrow"
            app:layout_constraintStart_toEndOf="@id/view_review_store_mg2"
            app:layout_constraintTop_toTopOf="@id/view_partner_list_title"
            app:layout_constraintBottom_toBottomOf="@id/view_partner_list_title"/>

        <TextView
            android:id="@+id/tv_review_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="역전할머니맥주"
            android:textColor="@color/assu_font_main"
            android:textSize="21sp"
            app:layout_constraintBottom_toTopOf="@+id/view_review_store_mg4"
            app:layout_constraintEnd_toStartOf="@id/view_review_store_mg3"
            app:layout_constraintStart_toEndOf="@id/view_review_store_mg2"
            app:layout_constraintTop_toBottomOf="@id/view_review_store_mg1" />

        <View
            android:id="@+id/view_review_store_mg3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_partner_list_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.03816" />

        <View
            android:id="@+id/view_review_store_mg4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_partner_list_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.0157"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/ll_reivew_sotre_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_partner_list_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="21dp"/>

            <TextView
                android:id="@+id/tv_review_store_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 받을 제휴 혜택"
                android:textSize="16sp"
                android:paddingStart="7dp"
                android:layout_marginStart="33dp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/assu_font_main"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_review_store_partnership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constrainedHeight="true"
                app:layout_constraintTop_toBottomOf="@id/tv_location_search_success_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"
                android:layout_marginStart="33dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="20dp"
                tools:itemCount="2"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_review_store"/>

        </LinearLayout>

        <View
            android:id="@+id/view_review_store_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/assu_box"
            app:layout_constraintTop_toBottomOf="@id/ll_reivew_sotre_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_review_store_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_review_store_line"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_review_store_star1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_location_item_star_unselected"/>

            <ImageView
                android:id="@+id/iv_review_store_star2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_location_item_star_unselected"/>

            <ImageView
                android:id="@+id/iv_review_store_star3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_location_item_star_unselected"/>

            <ImageView
                android:id="@+id/iv_review_store_star4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_location_item_star_unselected"/>

            <ImageView
                android:id="@+id/iv_review_store_star5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_location_item_star_unselected"/>

            <TextView
                android:id="@+id/tv_review_store_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.0"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/assu_font_main"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_review_store_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20개의 평가"
            android:textSize="13sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            app:layout_constraintTop_toBottomOf="@id/ll_review_store_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"/>

        <ImageView
            android:id="@+id/iv_review_store_info_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_review_store"
            app:layout_constraintTop_toBottomOf="@id/tv_review_store_review_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/iv_review_store_info_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_info_cricle"
            app:layout_constraintTop_toTopOf="@id/iv_review_store_info_bg"
            app:layout_constraintStart_toStartOf="@id/iv_review_store_info_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_review_store_info_bg"
            android:layout_marginStart="7dp"/>

        <TextView
            android:id="@+id/tv_review_store_review_info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제휴 혜택을 받는 숭실대 학생들의 제휴 평점이에요"
            android:textSize="11sp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            app:layout_constraintBottom_toBottomOf="@id/iv_review_store_info_bg"
            app:layout_constraintTop_toTopOf="@id/iv_review_store_info_bg"
            app:layout_constraintStart_toEndOf="@id/iv_review_store_info_circle" />

        <TextView
            android:id="@+id/tv_review_store_review_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체보기"
            android:textSize="13sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            app:layout_constraintTop_toBottomOf="@id/tv_review_store_review_info_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="31dp"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_review_store_review_all"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fcv_review_store_rank"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/item_review"
                    android:visibility="visible"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_review_store_transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>