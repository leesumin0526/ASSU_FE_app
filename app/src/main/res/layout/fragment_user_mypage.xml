            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account_review"
            app:layout_constraintStart_toEndOf="@id/account_mg7_1"
            app:layout_constraintTop_toTopOf="parent"/>
        
        <View
            android:id="@+id/account_mg7_2"
