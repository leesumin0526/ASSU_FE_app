            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account_question"
            app:layout_constraintStart_toEndOf="@id/account_mg16_1"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/account_mg16_2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintWidth_percent="0.0761"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_question"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="자주 묻는 질문"
            android:textColor="@color/assu_font_main"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/account_mg16_2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/account_mg17"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.0189"
        app:layout_constraintTop_toBottomOf="@id/cl_account_component5"
        app:layout_constraintStart_toStartOf="@id/cl_account_component2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_account_component6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.5012"
        app:layout_constraintTop_toBottomOf="@id/account_mg17"
        app:layout_constraintStart_toStartOf="@id/cv_account_profile">

