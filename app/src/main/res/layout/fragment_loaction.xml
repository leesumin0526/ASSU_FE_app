<?xml version="1.0" encoding="utf-8"?>
<layout
    tools:context=".presentation.common.location.LocationFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <View
            android:id="@+id/view_location_search_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/assu_background"
            app:layout_constraintBottom_toTopOf="@id/view_location_map"
            app:layout_constraintHeight_percent="0.0914"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_location_search_mg1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/view_location_search_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.0157"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_location_search_mg2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_location_search_bar_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.03816" />

        <View
            android:id="@+id/view_location_search_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_location_search_bar"
            app:layout_constraintBottom_toTopOf="@id/view_location_search_mg4"
            app:layout_constraintEnd_toStartOf="@id/view_location_search_mg3"
            app:layout_constraintStart_toEndOf="@id/view_location_search_mg2"
            app:layout_constraintTop_toBottomOf="@id/view_location_search_mg1" />

        <ImageView
            android:id="@+id/iv_location_search_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search"
            app:layout_constraintDimensionRatio="20:20"
            app:layout_constraintWidth_percent="0.0508"
            app:layout_constraintTop_toTopOf="@id/view_location_search_bar"
            app:layout_constraintBottom_toBottomOf="@id/view_location_search_bar"
            app:layout_constraintStart_toStartOf="@id/view_location_search_bar"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/tv_location_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="찾으시는 제휴 가게가 없나요?"
            app:layout_constraintTop_toTopOf="@id/view_location_search_bar"
            app:layout_constraintStart_toEndOf="@id/iv_location_search_ic"
            app:layout_constraintBottom_toBottomOf="@id/view_location_search_bar"
            android:layout_marginStart="10dp"
            android:textColor="@color/assu_font_sub"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_regular"/>


        <View
            android:id="@+id/view_location_search_mg3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_location_search_bar_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.03816" />

        <View
            android:id="@+id/view_location_search_mg4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_location_search_bar_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.0157"
            app:layout_constraintStart_toStartOf="parent" />

        <com.kakao.vectormap.MapView
            android:id="@+id/view_location_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.9085"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_location_mg1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="14:122"
            app:layout_constraintHeight_percent="0.1742"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_location_mg4" />

        <View
            android:id="@+id/view_location_mg2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="14:122"
            app:layout_constraintHeight_percent="0.1742"
            app:layout_constraintBottom_toTopOf="@id/view_location_mg4"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/view_location_mg3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="393:559"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/view_location_mg4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="393:12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map_now"
            app:layout_constraintTop_toBottomOf="@+id/view_location_search_mg4"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fv_location_item"
            android:name="com.assu.app.presentation.common.location.LocationItemFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/view_location_mg4"
            app:layout_constraintEnd_toStartOf="@id/view_location_mg2"
            app:layout_constraintStart_toEndOf="@id/view_location_mg1"
            app:layout_constraintTop_toBottomOf="@id/view_location_mg3"
            android:visibility="invisible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>