<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:padding="15dp"
    android:background="@drawable/bg_review_delete_dialog">

    <TextView
        android:id="@+id/tv_question_real_report_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="고객 리뷰를 신고하시겠습니까?"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/assu_font_main"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_select_report_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="신고하실경우 신고 사유를 선택해주세요"
        android:textColor="@color/assu_font_sub"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="14sp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question_real_report_review"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_select_report_reason"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rb_inappropriate"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:fontFamily="@font/pretendard_regular"
            app:buttonTint="@color/assu_main"
            android:checked="true"
            android:text="부적절한 내용 및 욕설이 포함된 리뷰에요"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_false_info"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/pretendard_regular"
            app:buttonTint="@color/assu_main"
            android:text="허위사실 / 거짓이 포함된 리뷰에요"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_promotion"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/pretendard_regular"
            app:buttonTint="@color/assu_main"
            android:text="홍보/광고를 위한 리뷰에요"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/btn_report_cancel"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_btn_dialog_cancel"
        android:text="취소"
        android:gravity="center"
        android:textColor="@color/assu_main"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_report_confirm"
        app:layout_constraintHorizontal_weight="1" />

    <TextView
        android:id="@+id/btn_report_confirm"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_btn_dialog_select"
        android:text="신고하기"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintTop_toTopOf="@id/btn_report_cancel"
        app:layout_constraintBottom_toBottomOf="@id/btn_report_cancel"
        app:layout_constraintStart_toEndOf="@id/btn_report_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1.5" />

</androidx.constraintlayout.widget.ConstraintLayout>