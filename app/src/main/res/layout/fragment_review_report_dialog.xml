<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:padding="15dp"
    android:background="@drawable/bg_review_delete_dialog">

    <ImageView
        android:id="@+id/iv_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cross"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="@id/tv_question_real_report_review"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_question_real_report_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="고객 리뷰를 신고하는 사유를\n선택해주세요"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/assu_font_main"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/rb_inappropriate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question_real_report_review">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_radio_unselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="부적절한 내용 및 욕설이 포함된 리뷰에요"
            android:textColor="@color/assu_font_sub"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rb_false_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rb_inappropriate">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_radio_unselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="허위사실 / 거짓이 포함된 리뷰에요"
            android:textColor="@color/assu_font_sub"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rb_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rb_false_info">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_radio_unselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="홍보/광고를 위한 리뷰에요"
            android:textColor="@color/assu_font_sub"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"/>

    </LinearLayout>


    <TextView
        android:id="@+id/btn_report_cancel"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_btn_dialog_cancel"
        android:text="취소"
        android:gravity="center"
        android:textColor="@color/assu_main"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintTop_toBottomOf="@id/rb_promotion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_report_confirm"
        app:layout_constraintHorizontal_weight="1" />

    <TextView
        android:id="@+id/btn_report_confirm"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_btn_dialog_select"
        android:text="신고하기"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintTop_toTopOf="@id/btn_report_cancel"
        app:layout_constraintBottom_toBottomOf="@id/btn_report_cancel"
        app:layout_constraintStart_toEndOf="@id/btn_report_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1.5" />

</androidx.constraintlayout.widget.ConstraintLayout>