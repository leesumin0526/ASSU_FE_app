<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.common.chatting.proposal.ServiceProposalTermWritingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/assu_background">

        <View
            android:id="@+id/view_fragment_service_proposal_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/assu_background"
            app:layout_constraintHeight_percent="0.0914"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_fragment_service_proposal_mg1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.0157"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_fragment_service_proposal_mg2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_fragment_service_proposal_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.01816" />

        <ImageView
            android:id="@+id/iv_fragment_service_proposal_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_location_search_left_arrow"
            app:layout_constraintStart_toEndOf="@id/view_fragment_service_proposal_mg2"
            app:layout_constraintTop_toTopOf="@id/view_fragment_service_proposal_title"
            app:layout_constraintBottom_toBottomOf="@id/view_fragment_service_proposal_title" />

        <TextView
            android:id="@+id/tv_fragment_service_proposal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="제휴 제안서"
            android:textColor="@color/assu_font_main"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/view_fragment_service_proposal_mg4"
            app:layout_constraintEnd_toStartOf="@id/view_fragment_service_proposal_mg3"
            app:layout_constraintStart_toEndOf="@id/view_fragment_service_proposal_mg2"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg1" />

        <View
            android:id="@+id/view_fragment_service_proposal_mg3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_fragment_service_proposal_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.03816" />

        <View
            android:id="@+id/view_fragment_service_proposal_mg4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_fragment_service_proposal_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.01712"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_fragment_service_proposal_mg5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.0329"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_fragment_service_proposal_mg6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.0610"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_fragment_service_proposal_mg7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.0610"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_fragment_service_proposal_partner_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제휴 기간 선택"
            android:textSize="13sp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg5"
            app:layout_constraintStart_toEndOf="@id/view_fragment_service_proposal_mg6"/>

        <View
            android:id="@+id/view_fragment_service_proposal_mg8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_fragment_service_proposal_partner_guide"
            app:layout_constraintEnd_toStartOf="@id/view_fragment_service_proposal_mg7"
            app:layout_constraintHeight_percent="0.0263"
            app:layout_constraintStart_toEndOf="@id/view_fragment_service_proposal_mg6" />

        <ImageView
            android:id="@+id/iv_fragment_service_proposal_content"
            android:layout_width="150.5dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg8"
            app:layout_constraintStart_toEndOf="@id/view_fragment_service_proposal_mg6"
            android:background="@drawable/bg_service_proposal_box" />

        <EditText
            android:id="@+id/et_fragment_service_proposal_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="2025 - 05 - 05 "
            android:textColor="@color/assu_font_sub"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="15dp"
            android:background="@color/assu_box"
            app:layout_constraintTop_toTopOf="@id/iv_fragment_service_proposal_content"
            app:layout_constraintStart_toStartOf="@id/iv_fragment_service_proposal_content"
            app:layout_constraintEnd_toStartOf="@id/iv_fragment_service_proposal_calendar"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_content" />

        <ImageView
            android:id="@+id/iv_fragment_service_proposal_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_proposal_calendar"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/iv_fragment_service_proposal_content"
            app:layout_constraintEnd_toEndOf="@id/iv_fragment_service_proposal_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_content"/>

        <TextView
            android:id="@+id/iv_fragment_service_proposal_wave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="~"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/assu_font_sub"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toTopOf="@id/iv_fragment_service_proposal_content"
            app:layout_constraintStart_toEndOf="@id/iv_fragment_service_proposal_content"
            app:layout_constraintEnd_toStartOf="@id/iv_fragment_service_proposal_content3"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_content" />

        <ImageView
            android:id="@+id/iv_fragment_service_proposal_content3"
            android:layout_width="150.5dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg8"
            app:layout_constraintEnd_toStartOf="@id/view_fragment_service_proposal_mg7"
            android:background="@drawable/bg_service_proposal_box" />

        <EditText
            android:id="@+id/iv_fragment_service_proposal_content4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="2025 - 05 - 05 "
            android:background="@color/assu_box"
            android:textColor="@color/assu_font_sub"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/iv_fragment_service_proposal_content3"
            app:layout_constraintStart_toStartOf="@id/iv_fragment_service_proposal_content3"
            app:layout_constraintEnd_toStartOf="@id/iv_fragment_service_proposal_calendar2"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_content3" />

        <ImageView
            android:id="@+id/iv_fragment_service_proposal_calendar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_proposal_calendar"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/iv_fragment_service_proposal_content3"
            app:layout_constraintEnd_toEndOf="@id/iv_fragment_service_proposal_content3"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_content3"/>

        <View
            android:id="@+id/view_fragment_service_proposal_mg9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/iv_fragment_service_proposal_content"
            app:layout_constraintEnd_toStartOf="@id/view_fragment_service_proposal_mg7"
            app:layout_constraintHeight_percent="0.0263"
            app:layout_constraintStart_toEndOf="@id/view_fragment_service_proposal_mg6" />

        <ImageView
            android:id="@+id/iv_fragment_service_proposal_sign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_proposal_signature"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg9"
            app:layout_constraintStart_toEndOf="@id/view_fragment_service_proposal_mg6"
            app:layout_constraintEnd_toStartOf="@id/view_fragment_service_proposal_mg7"/>


        <TextView
            android:id="@+id/tv_fragment_service_proposal_sign2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="@color/assu_box"
            android:text="위와 같이 숭실대학교 총학생회와 \n제휴를 제안합니다."
            android:textColor="@color/assu_font_sub"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="15dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toTopOf="@id/iv_fragment_service_proposal_sign"
            app:layout_constraintStart_toStartOf="@id/iv_fragment_service_proposal_sign" />

        <TextView
            android:id="@+id/tv_fragment_service_proposal_sign3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="2025년 03월 29일\n대표"
            android:textColor="@color/assu_font_sub"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_sign"
            app:layout_constraintStart_toStartOf="@id/iv_fragment_service_proposal_sign" />

        <EditText
            android:id="@+id/et_fragment_service_proposal_sign4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:hint="(인)"
            android:textColor="@color/assu_font_sub"
            android:fontFamily="@font/pretendard_medium"
            android:background="@android:color/transparent"
            android:layout_marginBottom="17dp"
            android:layout_marginStart="-75dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_sign"
            app:layout_constraintStart_toEndOf="@id/tv_fragment_service_proposal_sign3" />

        <ImageButton
            android:id="@+id/btn_completed"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginBottom="46dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_basic_unselected"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제안서 보내기"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintStart_toStartOf="@id/btn_completed"
            app:layout_constraintEnd_toEndOf="@id/btn_completed"
            app:layout_constraintTop_toTopOf="@id/btn_completed"
            app:layout_constraintBottom_toBottomOf="@id/btn_completed"/>
        <!-- 인증 완료 버튼 (하단 고정) -->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>