<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.admin.home.AdminPassivityRegisterFinishFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/assu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_cross"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_cross"/>

        <View
            android:id="@+id/view_mg1"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            app:layout_constraintTop_toBottomOf="@id/iv_cross"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/view_mg1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹 제휴 인증완료"
                android:textSize="30sp"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_semibold"/>

            <View
                android:id="@+id/view_mg2"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <LinearLayout
                android:id="@+id/ll_complete_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_contract_partnership_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="혜택이 곧"
                    android:textColor="@color/assu_font_sub"
                    android:textSize="20sp"
                    android:fontFamily="@font/pretendard_regular"/>
                <TextView
                    android:id="@+id/tv_contract_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 제공됩니다!!"
                    android:textColor="@color/assu_font_sub"
                    android:textSize="20sp"
                    android:fontFamily="@font/pretendard_regular"/>
            </LinearLayout>


            <View
                android:id="@+id/view_mg3"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>