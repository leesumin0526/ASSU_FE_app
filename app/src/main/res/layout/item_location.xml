<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_admin_partner_location_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_admin_partner_location_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="365:126"
            android:src="@drawable/bg_common_location_item" />

        <View
            android:id="@+id/view_admin_partner_location_mg1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="20:126"
            app:layout_constraintStart_toStartOf="@id/iv_admin_partner_location_bg"
            app:layout_constraintTop_toTopOf="@id/iv_admin_partner_location_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_admin_partner_location_bg"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_admin_partner_location"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.1917"
            app:cardCornerRadius="7dp"
            app:layout_constraintTop_toTopOf="@id/iv_admin_partner_location_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_admin_partner_location_bg"
            app:layout_constraintStart_toEndOf="@id/view_admin_partner_location_mg1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_admin_partner_location_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_location_beer"/>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view_admin_partner_location_mg3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_admin_partner_location_bg"
            app:layout_constraintDimensionRatio="20:126"
            app:layout_constraintStart_toEndOf="@id/cv_admin_partner_location"
            app:layout_constraintTop_toTopOf="@id/iv_admin_partner_location_bg" />

        <LinearLayout
            android:id="@+id/ll_admin_partner_location_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@id/iv_admin_partner_location_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_admin_partner_location_bg"
            app:layout_constraintStart_toEndOf="@id/view_admin_partner_location_mg3"
            app:layout_constraintEnd_toStartOf="@id/view_admin_partner_location_mg2">

            <TextView
                android:id="@+id/tv_admin_partner_location_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="역전할머니 숭실대점"
                android:textSize="17sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/assu_font_main"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_admin_partner_location_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/iv_admin_partner_location_capsule"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_location_capsule"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_admin_partner_location_address_date"
                    android:layout_marginEnd="6dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_admin_partner_location_capsule_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제휴중"
                    android:textSize="11sp"
                    android:textColor="@color/assu_font_sub"
                    app:layout_constraintTop_toTopOf="@id/tv_admin_partner_location_address_date"
                    app:layout_constraintBottom_toBottomOf="@id/tv_admin_partner_location_address_date"
                    app:layout_constraintStart_toStartOf="@id/iv_admin_partner_location_capsule"
                    app:layout_constraintEnd_toEndOf="@id/iv_admin_partner_location_capsule"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_admin_partner_location_address_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울 동작구 사당로 36-1 서정캐슬"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/assu_font_sub"
                    app:layout_constraintStart_toEndOf="@id/iv_admin_partner_location_capsule"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_admin_partner_location_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_admin_partner_location_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_location_contact"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_admin_partner_location_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문의하기"
                    android:textColor="@color/assu_font_white"
                    android:textSize="11sp"
                    android:fontFamily="@font/pretendard_regular"
                    app:layout_constraintTop_toTopOf="@id/iv_admin_partner_location_contact"
                    app:layout_constraintBottom_toBottomOf="@id/iv_admin_partner_location_contact"
                    app:layout_constraintStart_toStartOf="@id/iv_admin_partner_location_contact"
                    app:layout_constraintEnd_toEndOf="@id/iv_admin_partner_location_contact"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_admin_partner_location_mg2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/ll_admin_partner_location_content"
            app:layout_constraintEnd_toEndOf="@id/iv_admin_partner_location_bg"
            app:layout_constraintTop_toTopOf="@id/iv_admin_partner_location_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_admin_partner_location_bg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>