<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_submit_inquiry">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

        <!-- 제목 입력 -->
        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="13sp"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/et_inquiry_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목을 작성해주세요"
                android:textSize="14sp"
                android:textColor="@color/assu_font_main"
                android:textColorHint="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_regular"
                android:background="@drawable/bg_edit_text"
                android:padding="15dp"
                android:inputType="text"
                android:maxLines="1"/>

        </LinearLayout>

        <!-- 문의 내용 입력 -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/title_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문의 내용"
                android:textSize="13sp"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/et_inquiry_content"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:hint="문의 내용을 작성해주세요"
                android:textSize="14sp"
                android:textColor="@color/assu_font_main"
                android:textColorHint="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_regular"
                android:background="@drawable/bg_edit_text"
                android:padding="15dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:scrollbars="vertical"/>

        </LinearLayout>

        <!-- 이메일 입력 -->
        <LinearLayout
            android:id="@+id/email_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/content_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성자 이메일"
                android:textSize="13sp"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/et_inquiry_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="example@gmail.com"
                android:textSize="14sp"
                android:textColor="@color/assu_font_main"
                android:textColorHint="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_regular"
                android:background="@drawable/bg_edit_text"
                android:padding="15dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"/>

        </LinearLayout>

        <!-- 개인정보 수집 안내 -->
        <LinearLayout
            android:id="@+id/privacy_notice_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_privacy_notice"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/email_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginEnd="7dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_info_circle" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="문의사항 등록 시 개인정보 수집 및 이용에 동의하는 것으로 간주됩니다."
                android:textSize="11sp"
                android:textColor="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_regular"
                android:lineSpacingExtra="2dp"/>

        </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- 작성하기 버튼 -->
    <TextView
        android:id="@+id/btn_submit_inquiry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="작성하기"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/pretendard_bold"
        android:background="@drawable/bg_button_rounded"
        android:gravity="center"
        android:padding="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
