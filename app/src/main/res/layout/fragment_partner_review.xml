<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/assu_background"
    tools:context=".presentation.partner.dashboard.review.PartnerReviewFragment">

    <View
        android:id="@+id/customer_review_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/assu_background"
        app:layout_constraintHeight_percent="0.0914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/customer_review_mg1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.0157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/customer_review_mg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/customer_review_bar_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.01816" />

    <ImageView
        android:id="@+id/btn_customer_review_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_location_search_left_arrow"
        app:layout_constraintStart_toEndOf="@id/customer_review_mg2"
        app:layout_constraintTop_toTopOf="@id/customer_review_bar_bg"
        app:layout_constraintBottom_toBottomOf="@id/customer_review_bar_bg"/>

    <TextView
        android:id="@+id/tv_customer_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:text="고객 리뷰"
        android:textColor="@color/assu_font_main"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/customer_review_mg4"
        app:layout_constraintEnd_toStartOf="@id/customer_review_mg3"
        app:layout_constraintStart_toEndOf="@id/customer_review_mg2"
        app:layout_constraintTop_toBottomOf="@id/customer_review_mg1" />

    <View
        android:id="@+id/customer_review_mg3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/customer_review_bar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.03816" />

    <View
        android:id="@+id/customer_review_mg4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/customer_review_bar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.0157"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/customer_review_mg4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_customer_review_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_customer_review_star1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_location_item_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_customer_review_star2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_location_item_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_customer_review_star3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_location_item_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_customer_review_star4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_location_item_star_unselected"/>

                <ImageView
                    android:id="@+id/iv_customer_review_star5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_location_item_star_unselected"/>

                <TextView
                    android:id="@+id/tv_customer_review_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/assu_font_main"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_review_store_review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0개의 평가"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/assu_font_sub"
                android:layout_marginTop="18dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_customer_review_notion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/customer_review_mg6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.061" />

                <View
                    android:id="@+id/customer_review_mg7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.061" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_review_store"
                    app:layout_constraintStart_toEndOf="@id/customer_review_mg6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/customer_review_mg7">
                    <ImageView
                        android:id="@+id/iv_customer_review_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_cricle"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tv_review_store_review_info_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제휴 혜택을 받는 숭실대 학생들의 제휴 평점이에요"
                        android:textSize="11sp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/assu_font_sub"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_customer_review_info"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_customer_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                tools:listitem="@layout/item_review"/>

            <FrameLayout
                android:id="@+id/fl_partner_review_none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_partner_review_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아직 제휴 리뷰가 없어요"
                        android:layout_marginTop="119dp"
                        android:textSize="16dp"
                        android:textColor="@color/assu_font_main"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/assu_font_sub"
                        android:layout_marginTop="7dp"
                        android:textSize="14dp"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/tv_partner_review_none"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="매장을 찾지 못해 페이지를 표시할 수 없어요\n이용에 불편을 드려 죄송합니다."/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
