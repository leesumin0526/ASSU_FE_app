<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/assu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_admin_list_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0914"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_admin_list_mg1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.0157"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_admin_list_mg2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_admin_list_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.01816" />

        <ImageView
            android:id="@+id/iv_admin_list_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_location_search_left_arrow"
            app:layout_constraintStart_toEndOf="@id/view_admin_list_mg2"
            app:layout_constraintTop_toTopOf="@id/view_admin_list_title"
            app:layout_constraintBottom_toBottomOf="@id/view_admin_list_title"/>

        <TextView
            android:id="@+id/tv_admin_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="제휴단체 목록"
            android:textColor="@color/assu_font_main"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/view_admin_list_mg4"
            app:layout_constraintEnd_toStartOf="@id/view_admin_list_mg3"
            app:layout_constraintStart_toEndOf="@id/view_admin_list_mg2"
            app:layout_constraintTop_toBottomOf="@id/view_admin_list_mg1" />

        <View
            android:id="@+id/view_admin_list_mg3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_admin_list_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.03816" />

        <View
            android:id="@+id/view_admin_list_mg4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_admin_list_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.01712"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 제휴업체 설명 및 필터 UI -->
        <LinearLayout
            android:id="@+id/layout_admin_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/view_admin_list_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 설명 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_list_info">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/ic_info_cricle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="역전할머니맥주와 제휴를 체결한 단체 목록이에요"
                    android:textSize="12sp"
                    android:textColor="@color/assu_font_sub"
                    android:fontFamily="@font/pretendard_regular" />
            </LinearLayout>

            <!-- 제휴 개수 및 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="진행중인 제휴가 "
                    android:textSize="14sp"
                    android:textColor="@color/assu_font_main"
                    android:fontFamily="@font/pretendard_medium" />

                <TextView
                    android:id="@+id/tv_admin_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="14sp"
                    android:textColor="@color/assu_main"
                    android:fontFamily="@font/pretendard_semibold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="건 있어요"
                    android:textSize="14sp"
                    android:textColor="@color/assu_font_main"
                    android:fontFamily="@font/pretendard_medium" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최신순"
                        android:textSize="13sp"
                        android:textColor="@color/assu_font_main"
                        android:fontFamily="@font/pretendard_medium" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/ic_sort_arrow_down" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 제휴업체 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_partner_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/layout_admin_info"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>