<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.common.contract.ProposalModifyFragment"
        android:background="@drawable/bg_dialog_rounded">


        <View
            android:id="@+id/partnership_content_mg1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.04180602007"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_partnership_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.04013377926"
            app:layout_constraintTop_toBottomOf="@id/partnership_content_mg1"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/partnership_content_mg2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="26"/>

            <ImageView
                android:id="@+id/iv_partnership_content_cross"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cross"
                android:layout_gravity="center"
                android:layout_weight="24"/>

            <View
                android:id="@+id/partnership_content_mg3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="77.5"/>

            <TextView
                android:id="@+id/tv_partnership_content_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="제휴 계약서"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="20sp"
                android:textColor="@color/assu_font_main"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="90"/>

            <View
                android:id="@+id/partnership_content_mg4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="127.5"/>

        </LinearLayout>

        <View
            android:id="@+id/partnership_content_mg5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0329"
            app:layout_constraintTop_toBottomOf="@id/layout_partnership_content"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_proposal_modify_name"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.233"
            android:paddingStart="39dp"
            android:paddingEnd="39dp"
            app:layout_constraintTop_toBottomOf="@+id/partnership_content_mg5">

            <TextView
                android:id="@+id/tv_fragment_service_proposal_partner_guide"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="제휴 제안업체"
                android:textSize="13sp"
                android:layout_weight="31"
                android:gravity="center_vertical"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/assu_font_sub" />


            <EditText
                android:id="@+id/et_fragment_service_proposal_partner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="역전할머니 맥주"
                android:textSize="17sp"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:layout_marginStart="-3dp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/assu_font_main" />

            <TextView
                android:id="@+id/tv_fragment_service_proposal_admin_guide"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="제휴 제안인"
                android:textSize="13sp"
                android:layout_weight="31"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/assu_font_sub" />


            <EditText
                android:id="@+id/et_fragment_service_proposal_admin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="숭실대학교 총학생회"
                android:textSize="17sp"
                android:layout_weight="50"
                android:layout_marginStart="-3dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/assu_font_main" />
        </LinearLayout>

        <View
            android:id="@+id/partnership_content_mg8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.02689"
            app:layout_constraintTop_toBottomOf="@id/ll_proposal_modify_name"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_partnership_content_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/item_partnership_content_modify_list"
            tools:itemCount="2"
            app:layout_constraintTop_toBottomOf="@id/partnership_content_mg8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHeight_percent="0.2028"/>

        <View
            android:id="@+id/partnership_content_mg15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.02689"
            app:layout_constraintTop_toBottomOf="@id/rv_partnership_content_list"/>

        <TextView
            android:id="@+id/tv_partnership_content_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제휴기간"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="13sp"
            android:textColor="@color/assu_font_sub"
            app:layout_constraintTop_toBottomOf="@id/partnership_content_mg15"
            app:layout_constraintStart_toStartOf="@id/partnership_content_mg15"
            android:layout_marginStart="39dp"
            />

        <LinearLayout
            android:id="@+id/layout_partnership_content_period"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.03511705686"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_partnership_content_term"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/partnership_content_mg16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"/>


            <TextView
                android:id="@+id/tv_partnership_content_start_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2025 - 05 - 05"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="14sp"
                android:textColor="@color/assu_font_main"
                android:gravity="center"
                android:layout_weight="90"/>

            <View
                android:id="@+id/partnership_content_mg18"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9.5"/>

            <TextView
                android:id="@+id/tv_partnership_content_wave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="~"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="13sp"
                android:textColor="@color/assu_font_main"
                android:gravity="center_vertical"
                android:layout_weight="9"/>

            <View
                android:id="@+id/partnership_content_mg19"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9.5"/>

            <TextView
                android:id="@+id/tv_partnership_content_end_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2025 - 12 - 12"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="14sp"
                android:textColor="@color/assu_font_main"
                android:gravity="center"
                android:layout_weight="90"/>

            <View
                android:id="@+id/partnership_content_mg20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"/>
        </LinearLayout>

        <View
            android:id="@+id/partnership_content_mg21"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.01976"
            app:layout_constraintTop_toBottomOf="@id/layout_partnership_content_period"/>

        <LinearLayout
            android:id="@+id/layout_partnership_content_final"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1740802676"
            app:layout_constraintTop_toBottomOf="@id/partnership_content_mg21"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/partnership_content_mg22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"/>


            <TextView
                android:id="@+id/tv_partnership_content_sign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/partnership_content_mg21"
                android:background="@drawable/bg_review_box_radius_8"
                android:text="위와 같이 숭실대학교 총학생회 \n제휴를 제안합니다.\n\n2025년 03월 29일\n대표 (인)"
                android:textColor="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="14sp"
                android:layout_weight="316"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:padding="10dp"/>

            <View
                android:id="@+id/partnership_content_mg23"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"/>
        </LinearLayout>

        <View
            android:id="@+id/partnership_content_mg11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.02976"
            app:layout_constraintTop_toBottomOf="@id/layout_partnership_content_final"/>

        <View
            android:id="@+id/partnership_content_mg12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.0610"
            app:layout_constraintStart_toStartOf="@id/partnership_content_mg11"
            app:layout_constraintTop_toBottomOf="@id/partnership_content_mg11"/>

        <LinearLayout
            android:id="@+id/ll_partnership_check"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.8778"
            app:layout_constraintHeight_percent="0.073"
            app:layout_constraintStart_toEndOf="@id/partnership_content_mg12"
            app:layout_constraintTop_toBottomOf="@id/partnership_content_mg11"
            android:background="@drawable/bg_chatting_proposal_box"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_partnership_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_modify"
                android:layout_marginRight="10.5dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_partnership_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정하기"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
