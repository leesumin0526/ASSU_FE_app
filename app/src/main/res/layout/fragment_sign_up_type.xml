<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.common.signup.SignUpTypeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/assu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 프로그레스바 영역 -->
        <FrameLayout
            android:id="@+id/fl_signup_progress_container"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_signup_progress_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_signup_progress_bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_signup_progress_bar" />
        </FrameLayout>


        <!-- 가입유형 텍스트 -->
        <TextView
            android:id="@+id/tv_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="가입 유형을\n선택해주세요!"
            android:layout_marginStart="24dp"
            android:textColor="@color/assu_font_main"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/fl_signup_progress_container"
            app:layout_constraintStart_toStartOf="parent"
            />

        <FrameLayout
            android:id="@+id/fl_admin_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@id/tv_type_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btn_admin_type"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_signup_input_bar"
                android:clickable="true"
                android:contentDescription="관리자 버튼"
                android:focusable="false"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_admin_type"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="15dp"
                android:gravity="left|center"
                android:text="관리자"
                android:textSize="17sp"
                android:textColor="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_semibold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_partner_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/fl_admin_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btn_partner_type"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_signup_input_bar"
                android:scaleType="centerCrop"
                android:focusable="false"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_partner_type"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="15dp"
                android:gravity="left|center"
                android:text="제휴업체"
                android:textSize="17sp"
                android:textColor="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_semibold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_user_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/fl_partner_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btn_user_type"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_signup_input_bar"
                android:scaleType="centerCrop"
                android:focusable="false"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_user_type"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="15dp"
                android:gravity="left|center"
                android:text="사용자"
                android:textSize="17sp"
                android:textColor="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_semibold" />
        </FrameLayout>

        <!-- 인증 완료 버튼 (하단 고정) -->
        <ImageButton
            android:id="@+id/btn_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_basic_unselected"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="57dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="확인"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
