<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_fragment_service_proposal_item_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_fragment_service_proposal_mg13"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/iv_fragment_service_proposal_drop_down_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_service_proposal_box"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg13"
            app:layout_constraintBottom_toTopOf="@id/view_fragment_service_proposal_mg14"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_fragment_service_proposal_drop_down_ic"
            android:layout_width="15dp"
            android:layout_height="8dp"
            android:background="@drawable/ic_down"
            app:layout_constraintTop_toTopOf="@id/iv_fragment_service_proposal_drop_down_bg"
            app:layout_constraintEnd_toEndOf="@id/iv_fragment_service_proposal_drop_down_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_drop_down_bg"
            android:layout_marginEnd="12.5dp"
            android:backgroundTint="@color/assu_font_sub" />

        <TextView
            android:id="@+id/tv_fragment_service_proposal_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제휴혜택 선택"
            app:layout_constraintTop_toTopOf="@id/iv_fragment_service_proposal_drop_down_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_drop_down_bg"
            app:layout_constraintStart_toStartOf="@id/iv_fragment_service_proposal_drop_down_bg"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/assu_font_sub"
            android:layout_marginStart="10dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dropdown_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg13"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/iv_proposal_dropdown_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_proposal_drop_down"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/view_proposal_mg0"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/iv_proposal_drop_down_ic"
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:background="@drawable/ic_down"
                android:layout_marginEnd="12.5dp"
                android:layout_marginTop="6.6dp"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_mg0"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/assu_font_sub" />

            <TextView
                android:id="@+id/tv_proposal_drop_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제휴혜택 선택"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_mg0"
                app:layout_constraintStart_toStartOf="@id/iv_proposal_dropdown_bg"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="#D9DBDD"
                android:layout_marginStart="10dp" />

            <View
                android:id="@+id/view_proposal_mg1"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_proposal_drop_down"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/view_proposal_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/assu_font_sub"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_mg1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <View
                android:id="@+id/view_proposal_mg2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_proposal_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 제공"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_mg2"
                app:layout_constraintStart_toStartOf="@id/iv_proposal_dropdown_bg"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/assu_font_sub"
                android:layout_marginStart="10dp" />

            <View
                android:id="@+id/view_proposal_mg3"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_proposal_option1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_proposal_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="할인 혜택"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_mg3"
                app:layout_constraintStart_toStartOf="@id/iv_proposal_dropdown_bg"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/assu_font_sub"
                android:layout_marginStart="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_fragment_service_proposal_mg14"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/iv_fragment_service_proposal_drop_down_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.0171"
            android:visibility="visible"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_fragment_service_proposal_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg14">

            <ImageView
                android:id="@+id/iv_fragment_service_proposal_num"
                android:layout_width="34dp"
                android:layout_height="31dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/bg_service_proposal_box" />

            <EditText
                android:id="@+id/et_fragment_service_proposal_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:hint="0"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_regular"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@id/iv_fragment_service_proposal_num"
                app:layout_constraintStart_toStartOf="@id/iv_fragment_service_proposal_num"
                app:layout_constraintEnd_toEndOf="@id/iv_fragment_service_proposal_num"
                app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_num"/>

            <TextView
                android:id="@+id/tv_fragment_service_proposal"
                android:layout_width="100dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="인 이상일 경우"
                android:textColor="@color/assu_font_sub"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_fragment_service_proposal_num"
                app:layout_constraintTop_toTopOf="parent" />



            <ImageView
                android:id="@+id/iv_fragment_service_proposal_content"
                android:layout_width="100dp"
                android:layout_height="31dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_fragment_service_proposal"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/bg_service_proposal_box" />

            <EditText
                android:id="@+id/et_fragment_service_proposal_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:hint="캔콜라"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_regular"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@id/iv_fragment_service_proposal_content"
                app:layout_constraintStart_toStartOf="@id/iv_fragment_service_proposal_content"
                app:layout_constraintEnd_toEndOf="@id/iv_fragment_service_proposal_content"
                app:layout_constraintBottom_toBottomOf="@id/iv_fragment_service_proposal_content"
                />

            <TextView
                android:id="@+id/tv_fragment_service_proposal_which"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="제공"
                android:textColor="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_regular"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_fragment_service_proposal_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>