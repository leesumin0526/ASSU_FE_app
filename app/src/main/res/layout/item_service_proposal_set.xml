<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_fragment_service_proposal_item_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box_rounded"
        android:layout_marginTop="20dp">

        <View
            android:id="@+id/view_fragment_service_proposal_mg13"
            android:layout_width="0dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_fragment_service_proposal_drop_down_bg"
            android:layout_width="119dp"
            android:layout_height="41dp"
            android:background="@drawable/bg_proposal_box_stroke"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg13"
            app:layout_constraintBottom_toTopOf="@id/view_fragment_service_proposal_mg14"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_fragment_service_proposal_drop_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 제공"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/assu_main"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/iv_fragment_service_proposal_drop_down_ic"
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:background="@drawable/ic_down"
                android:backgroundTint="@color/assu_main"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12.5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_proposal_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제하기"
            android:textColor="@color/assu_font_sub"
            app:layout_constraintTop_toTopOf="@id/layout_fragment_service_proposal_drop_down_bg"
            app:layout_constraintBottom_toBottomOf="@id/layout_fragment_service_proposal_drop_down_bg"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginEnd="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_dropdown_menu"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg13"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/bg_proposal_box_stroke"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_proposal_dropdown_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_proposal_drop_down"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/view_proposal_mg0"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_proposal_drop_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 제공"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_mg0"
                app:layout_constraintStart_toStartOf="@id/iv_proposal_dropdown_bg"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/assu_main"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1.4dp" />

            <ImageView
                android:id="@+id/iv_proposal_drop_down_ic"
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:background="@drawable/ic_down"
                android:layout_marginTop="6.6dp"
                android:layout_marginEnd="4.2dp"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_mg0"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/assu_main" />


            <View
                android:id="@+id/view_proposal_mg1"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_proposal_drop_down"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/view_proposal_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/assu_font_sub"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_mg1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>

            <View
                android:id="@+id/view_proposal_mg2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_proposal_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 제공"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_mg2"
                app:layout_constraintStart_toStartOf="@id/iv_proposal_dropdown_bg"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/assu_font_sub"
                android:layout_marginStart="2dp" />

            <View
                android:id="@+id/view_proposal_mg3"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_proposal_option1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_proposal_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="할인 혜택"
                app:layout_constraintTop_toBottomOf="@id/view_proposal_mg3"
                app:layout_constraintStart_toStartOf="@id/iv_proposal_dropdown_bg"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/assu_font_sub"
                android:layout_marginStart="2dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_fragment_service_proposal_mg14"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_fragment_service_proposal_drop_down_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_proposal_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제공 기준"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="15sp"
            android:textColor="@color/assu_font_main"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg14"
            app:layout_constraintStart_toStartOf="@id/layout_fragment_service_proposal_drop_down_bg"
            android:layout_marginStart="8dp"/>


        <LinearLayout
            android:id="@+id/layout_proposal_condition_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/tv_proposal_condition"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg14"
            android:layout_marginLeft="25dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_proposal_condition_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_selected"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_proposal_condition_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금액"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:textColor="@color/assu_main"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_proposal_condition_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/layout_proposal_condition_cost"
            app:layout_constraintTop_toBottomOf="@id/view_fragment_service_proposal_mg14"
            android:layout_marginLeft="25dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_proposal_condition_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_unselected"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_proposal_condition_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인원 수"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:textColor="@color/assu_font_sub"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_proposal_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_proposal_condition_people"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="16dp">


            <EditText
                android:id="@+id/et_fragment_service_proposal_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="10,000"
                android:textSize="15sp"
                android:background="@color/assu_box"
                android:layout_marginStart="115dp"
                android:paddingEnd="21dp"
                android:paddingStart="10dp"/>

            <TextView
                android:id="@+id/tv_proposal_condition_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="원 이상일 경우,"/>

        </LinearLayout>



        <View
            android:id="@+id/view_main_line"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/assu_sub2"
            app:layout_constraintTop_toBottomOf="@id/layout_proposal_condition"
            android:layout_marginTop="16dp"
            android:layout_marginStart="28.5dp"
            android:layout_marginEnd="28.5dp"/>


        <TextView
            android:id="@+id/tv_proposal_provide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제공 항목"
            android:textColor="@color/assu_font_main"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="15sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/tv_proposal_condition"
            app:layout_constraintTop_toBottomOf="@id/view_main_line"/>



        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexbox_service_proposal_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_proposal_provide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_main_line">


            <EditText
                android:id="@+id/et_fragment_service_proposal_content2"
                android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:textSize="17sp"
                android:hint="캔콜라"
                android:textColor="@color/assu_font_main"
                android:fontFamily="@font/pretendard_regular"
                android:background="@drawable/bg_box_rounded"
                android:gravity="center"/>

            <TextView
                android:id="@+id/iv_fragment_service_proposal_add_goods_btn"
                android:background="@drawable/bg_message_mine"
                android:layout_width="53dp"
                android:layout_height="23dp"
                android:text="+   추가"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginStart="26dp"
                app:layout_constraintStart_toEndOf="@id/iv_fragment_service_proposal_content"
                app:layout_constraintTop_toTopOf="parent" />

        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:id="@+id/view_fragment_service_proposal_mg18"
            android:layout_width="0dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/flexbox_service_proposal_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>